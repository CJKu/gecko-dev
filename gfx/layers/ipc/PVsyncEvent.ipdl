include ProtocolTypes;

namespace mozilla {
namespace layers {

struct VsyncData
{
  int64_t timeStamp;
  uint32_t frameNumber;
};

sync protocol PVsyncEvent
{
child:
  NotifyVsyncEvent(VsyncData aVsyncData);

parent:
  EnableVsyncEventNotification();
  DisableVsyncEventNotification();
};

} // namespace layers
} // namespace mozilla
